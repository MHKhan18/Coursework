<div>
    <h1>{{title}}</h1>
    <img alt="{{title}}" src="{{image}}" />
    <dl>
        <dt>Language</dt>
        <dd>{{language}}</dd>
        <dt>Genres</dt>
        <dd>
            <ul>
                {{#each genres}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </dd>

        <dt>Average Rating</dt>
        <dd>{{rating}}</dd>

        <dt>Network</dt>
        <dd>{{network}}</dd>

        <dt>Summary</dt>
        <dd>{{summary}}</dd>
    </dl>
</div>